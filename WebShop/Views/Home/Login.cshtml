@model WebShop.Models.Administrator

@{
    ViewBag.Title = "Login";
}

<h2 class="display-4">Log in:</h2>
<br />
@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(obj => obj.Username, "Username:", new { @class = "h5 col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(obj => obj.Username, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group row">
        @Html.LabelFor(obj => obj.Password, "Password:", new { @class = "h5  col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(obj => obj.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-5 text-right">
            <input type="submit" class="btn btn-warning" value="Submit" />
        </div>
    </div>
    
    <small class="text-muted">
        Note: Since this is test environment/project to grant admin access enter user 'root' with password 'root'.
    </small>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
}
